plot [:] ofn1 u 2:14 w l ls 2 t 'OPAL'
repl     afn1 u 1:($6*1E-6*2) w l ls 1 t 'Astra'
#
set term post enh col 'Helvetica,22' lw 3
set out 'ctf3-OA-nosc-ezrms-1.ps'
replot
set term x11
set out
