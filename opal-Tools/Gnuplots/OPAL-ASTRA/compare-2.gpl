plot [:0.2] ofn1 u 2:34 w l ls 2 t 'OPAL'
repl     afn3 u 1:(-1*$4) w l ls 1 t 'Astra'
#
set term post enh col 'Helvetica,22' lw 3
set out 'ctf3-OA-nosc-dEdz-1.ps'
replot
set term x11
set out






