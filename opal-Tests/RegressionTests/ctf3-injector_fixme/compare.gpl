set ylabel '{/Symbol e}_{xrms} (mm-mr)' font 'Helvetica-Bold,25'
plot [:.1] ofn3 u 2:($12*1E3) w l ls 2 t 'OPAL 6.5 (3)'
repl     ofn2 u 2:($12*1E3) w l ls 3 t 'OPAL 6.75 (2)'
repl afnx u 1:4 w l ls 1 t 'Astra'
#
set term post enh col 'Helvetica,22' lw 3
set out 'orlandi-ctf3-exrms-1.ps'
replot
pause -1
set term x11
