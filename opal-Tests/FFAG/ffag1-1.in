//single particle track test for Carol's FFAG
Option, TFS=FALSE;
Option, ECHO=FALSE;
Option, PSDUMPFREQ=1;
Option, SPTDUMPFREQ=1;
Option, REPARTFREQ=10;
Option, REBINFREQ=50;

Title,string="FFAG (Carol Design) I= 0 mA";
Edes=0.03413;
gamma=(Edes+PMASS)/PMASS;
beta=sqrt(1-(1/gamma^2)); 
gambet=gamma*beta; 
P0 = gamma*beta*PMASS;
brho = (PMASS*1.0e9*gambet) / CLIGHT;

turns=1;
r0  = 2525.0;
phi0= 0.002;
pr0 = 0.0008;

value,{gamma,brho,Edes,beta,gambet.r0,pr0};

Dist1:DISTRIBUTION, DISTRIBUTION=gauss,
sigmax=  2.0e-03, sigmapx=1.0e-7, corrx=0.0,
sigmay=  2.0e-03, sigmapy=1.0e-7, corry=0.0,
sigmat=  2.0e-03, sigmapt=3.394e-4, corrt=0.0;

Fs1:FIELDSOLVER, FSTYPE=NONE, MX=64, MY=64, MT=64, 
        	 PARFFTX=true, PARFFTY=true, PARFFTT=true,
		 BCFFTX=open, BCFFTY=open, BCFFTT=open;

ffag: Cyclotron, TYPE="FFAG", CYHARMON=1, PHIINIT=phi0, PRINIT=pr0, RINIT=r0 , SYMMETRY=1.0, RFFREQ=200.0, FMAPFN="NSFFAGfieldPSI.dat", BSCALE=10.0;

ph=0;
cavvol1=0.0;

rf0: RFCavity, VOLT=cavvol1, FMAPFN="Cav1.dat", TYPE="SINGLEGAP", 
FREQ=200.0, RMIN = 2100.0, RMAX = 4000.0, ANGLE=45.0,  PDIS = 0.0, 
GAPWIDTH = 300.0, PHI0=ph; 

l1: Line = (ffag);
Select, Line=l1;

beam1: BEAM, PARTICLE=HYDRONGEN_MINUS, pc=P0, SPACECHARGE=false, NPART=1e5, BCURRENT=5.0E-3, CHARGE=1.0, BFREQ= 200.0;

track,line=l1, beam=beam1,MAXSTEPS=turns*180*42,STEPSPERTURN=180;
 run, method = "CYCLOTRON-T", beam=beam1, fieldsolver=Fs1, distribution=Dist1;
endtrack;
Stop;
